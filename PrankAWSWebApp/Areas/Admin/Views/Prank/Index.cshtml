
@{
    ViewData["Title"] = "Prank";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .containerNew {
        max-width: 80%;
        width: 100%;
        margin: 0 auto;
    }

    .buttonMeida {
        position: absolute;
        bottom: 11px;
        right: 12px;
    }

    #dataTablePrankInfo.table tr > td:first-child {
        position: relative;
    }

    .buttonMeida .btn {
        color: #fff;
        border-radius: 50%;
        height: 35px;
        width: 35px;
    }

    .btn-play {
        background: #5d69d8 !important;
    }

    .btn-main {
        background: #ffc107
    }

    .btn-Pause {
        background: red;
    }

    table.dataTable.no-footer {
        border-bottom: 0px solid #111;
    }

    .dataTables_wrapper {
        margin-bottom: 50px;
    }

    .dataTables_info {
        float: left !important;
        width: auto !important;
    }

    .dataTables_paginate {
        margin-top: 10px;
    }

    .div-right {
        display: flex;
        flex-flow: row;
        justify-content: end;
    }
</style>

<div class="containerNew">
    <div class="row">
        <div class="col-md-8 text-left">
            <h2>Manage Prank Info</h2>
        </div>
        <div class="form-inline col-md-4 div-right">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search By Prank Name" id="txtSearch">
                <div class="input-group-append">
                    <button class="btn btn-success" type="submit" onclick="javascript: DataTableInit();"><i class="fa fa-search"></i></button>
                </div>
                <button class="btn bg-facebook ml-2" id="btnAddPrankinfo" onclick="javascript: AddEditPrankinfo(0,'Add Prank Info');">Add</button>
            </div>
        </div>
        <div class="col-md-12 mt-4" id="dvPrankInfoLst">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTablePrankInfo" data-order='[[ 2, "desc" ]]'>
                    <thead class="thead-light ">
                        <tr>
                            @*<th scope="col">Prank Name </th>
                                <th scope="col" class="wd200">Picture</th>*@
                            <th scope="col" class="wd200"> Audio</th>
                            <th scope="col" class="wd300">Prank Desc</th>
                            <th scope="col">IsActive</th>
                            <th scope="col">Added Date</th>
                            <th scope="col">Modified Date</th>
                            <th scope="col">Action</th>

                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@*Add Edit modal popup*@

<div class="modal fade" id="PrankInfoAddEditModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="prankHeading">Add/Edit Prank Info</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div id="dvAddEditPrankInfo"></div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default btn-primary pull-right" id="btnSavePrankInfo"> Save</button>
                <button type="button" class="btn btn-default btn-default pull-right" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Close</button>

            </div>
        </div>
    </div>
</div>


