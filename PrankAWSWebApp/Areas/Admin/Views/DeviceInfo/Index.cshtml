@{
    ViewData["Title"] = "DeviceInfo";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    .containerNew {
        max-width: 80%;
        width: 100%;
        margin: 0 auto;
    }
</style>
<div class="containerNew">
<div class="row">
        <div class="col-md-8 text-left">
            <h2>Manage Device Info</h2>
        </div>
        <div class="form-inline col-md-4 div-right">
            <div class="input-group">
                <input type="text" placeholder="Search By Device Key" id="txtSearch" class="form-control">
                <div class="input-group-append">
                    <button type="submit" onclick="javascript: DataTableInit();" class="btn btn-success"><i class="fa fa-search"></i></button>
                </div>
            </div>
        </div>

        <div class="col-md-12 mt-4 table-responsive" id="dvDeviceInfoLst">
            <table class="table table-bordered table-hover" id="dataTableDeviceInfoLst">
                <thead class="thead-light ">
                    <tr>
                        <th scope="col">Device Key</th>
                        <th scope="col">Device Infomation</th>
                        <th scope="col">CreditBalance</th>
                        <th scope="col">IsActive</th>
                        <th scope="col" class="wd200">Added Date</th>
                        <th scope="col" class="wd200">Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
@*Add Edit modal popup*@
<div class="modal fade" id="DeviceCallHistoryModal" role="dialog">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Device Call History</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div id="dvDeviceCallHistoryLst"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-default pull-right" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="DevicePackageOrderModal" role="dialog">
    <div class="modal-dialog modal-xl">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Package Order Details</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div id="dvDevicePackageOrderLst"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-default pull-right" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/DeviceInfo/deviceinfo-main.js"></script>