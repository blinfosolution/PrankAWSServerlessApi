
@model PrankAWSWebApp.Models.EmployeModelViewModel

<form asp-controller="Employee" asp-action="SaveUpdate" id="frmemployee">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group row">
        <label class="col-md-4">First Name</label>
        <div class="col-md-8">
            @Html.TextBoxFor(p => p.FirstName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
            @Html.HiddenFor(p => p.Password)
            @Html.HiddenFor(p => p.Id)
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-4">Last Name</label>
        <div class="col-md-8">
            @Html.TextBoxFor(p => p.LastName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-4">Email</label>
        <div class="col-md-8">
            @Html.TextBoxFor(p => p.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-4">Phone</label>
        <div class="col-md-8">
            @Html.TextBoxFor(p => p.Phone, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-4">Roles</label>
        <div class="col-md-8">
            <select asp-for="RoleId" asp-items="Model.RoleList" class="custom-select">
                <option value="">Choose Role</option>
            </select>
        </div>
    </div>


</form>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>