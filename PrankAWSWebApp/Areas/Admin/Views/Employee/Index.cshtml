@model IEnumerable<PrankAWSWebApp.Models.EmployeModelViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    .containerNew {
        max-width: 80%;
        width: 100%;
        margin: 0 auto;
    }
</style>

@if (Model != null)
{
    <div class="containerNew">
        <div class="row">
            <div class="col-md-8 text-left">
                <h2>Manage Employee</h2>
            </div>
            <div class="form-inline col-md-4 div-right">
                <div class="input-group">
                    <button class="btn bg-facebook border" id="btnAddEmployee">Add</button>
                </div>
            </div>
            <div class="col-md-12 mt-4  table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="thead-light ">
                        <tr>
                            <th scope="col">Reset Pwd.</th>
                            <th scope="col">FirstName</th>
                            <th scope="col">LastName</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="tbodyEmployee">
                        @foreach (var employe in Model)
                        {
                            <tr data-id="@employe.Id">
                                <td><button class="btn btn-light border btnResetPass">Rest Password</button></td>
                                <td>@employe.FirstName </td>
                                <td>@employe.LastName </td>
                                <td>@employe.Email </td>
                                <td>@employe.Phone </td>
                                <td class="text-right">
                                    <button class="btn btn-light border btnEdit">Edit</button>
                                    <button class="btn btn-danger btnDelete">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
<div class="modal fade" id="myEmployeeModal" role="dialog">
    <div class="modal-dialog modal-custom">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="EmployeeHeading">Add Employee</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div id="dvaddEmployee"></div>

            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default btn-primary pull-right" id="btnSave"> Save</button>
                <button type="button" class="btn btn-default btn-default pull-right" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Close</button>

            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/Employee/employee-main.js"></script>


