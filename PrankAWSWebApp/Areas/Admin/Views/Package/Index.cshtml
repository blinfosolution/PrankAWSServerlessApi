
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    .containerNew {
        max-width: 80%;
        width: 100%;
        margin: 0 auto;
    }
</style>
<div class="containerNew">
    <div class="row">
        <div class="col text-left">
            <h2>Manage Package</h2>
        </div>
        <div class="col text-right">
            <button class="btn bg-facebook border" id="btnAddPackage">Add</button>
        </div>
        <div class="col-md-12 mt-4  table-responsive">
            <table class="table table-bordered table-hover" id="dataTablePackageinfo">
                <thead class="thead-light ">
                    <tr>

                        <th scope="col">PackageTitle </th>
                        <th scope="col">TokenCreditsPoint</th>
                        <th scope="col">PackagePrice</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="myPackageModal" role="dialog">
    <div class="modal-dialog modal-custom">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="packageHeading">Add/Edit Package</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div id="dvaddPackage"></div>

            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default btn-primary pull-right" id="btnSave"> Save</button>
                <button type="button" class="btn btn-default btn-default pull-right" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Close</button>

            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/Packages/packages-main.js"></script>

