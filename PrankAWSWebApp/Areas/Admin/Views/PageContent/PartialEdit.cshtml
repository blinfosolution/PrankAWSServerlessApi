@model PrankAWSWebApp.Models.PageContentModelViewModel

<form asp-controller="PageContent" asp-action="SaveUpdate" id="frmpagecontent" class="form-horizontal">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class=" form-group row">
        <label class="col-md-2">Content Key</label>
        <div class="col-md-10">
            @Html.TextBoxFor(p => p.PageContentKey, new { @class = "form-control", @disabled = "disabled" })
            @Html.HiddenFor(p => p.PageContentId)
            @Html.HiddenFor(p => p.PageContentKey)
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2">Content</label>
        <div class="col-md-10">
            @Html.TextAreaFor(p => p.PageContent, new { @class = "form-control" })
        
        </div>
    </div>
    <div class="form-group row text-left">
        <label class="col-md-2">&nbsp;</label>
        <div class="col-md-10">
            Active @Html.CheckBoxFor(p => p.IsActive)
        </div>
    </div>

</form>
<script src="~/Scripts/ckeditor/ckeditor.js"></script>
<script src="~/Scripts/ckeditor/adapters/jquery.js"></script>
