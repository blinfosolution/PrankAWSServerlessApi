@model PrankAWSWebApp.Models.PageContentDataModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    .containerNew {
        max-width: 80%;
        width: 100%;
        margin: 0 auto;
    }
</style>

@if (Model != null)
{
    <div class="containerNew">
        <div class="row">
            <div class="col-12 text-left">
                <h2>Manage Page Content</h2>
            </div>
            
            <div class="col-md-12 mt-4  table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="thead-light ">
                        <tr>

                            <th scope="col"> Key </th>
                            <th scope="col">Page Content</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="tbodyPageContent">
                        @foreach (var package in Model.responseObject)
                        {
                        <tr data-id="@package.PageContentId">
                            <td>@Html.Raw(package.PageContentKey)</td>
                            <td>@Html.Raw(package.PageContent)</td>
                            <td class="text-right">
                                <button class="btn btn-light border btnEdit">Edit</button>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<div class="modal fade" id="myPageContentModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit PageContent</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div id="dvaddPageContent"></div>

            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default btn-primary pull-right" id="btnSave"> Save</button>
                <button type="button" class="btn btn-default btn-default pull-right" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Close</button>

            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/PageContent/pagecontent-main.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

